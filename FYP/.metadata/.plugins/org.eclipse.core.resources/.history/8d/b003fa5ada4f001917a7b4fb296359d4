package cnn.layers;

import java.util.ArrayList;
import java.util.Random;

import cnn.layers.neurons.Neuron;
import cnn.layers.neurons.SigmoidNeuron;

public class FCH extends Layer{
	
	private ArrayList<double[][]> input;
	private ArrayList<double[][]> output;
	private ArrayList<Neuron> neurons;
	
	public ArrayList<double[][]> forwardPropagate(){
		//Apply neuron transformations
		//return output
		return input;
	}

	public ArrayList<double[][]> initialiseLayer(int c, ArrayList<double[][]> exampleInput, Layer nl, Layer pl) {
		nextLayer = nl;
		previousLayer = pl;
		
		input = exampleInput;
		
		//Create a randon number of neurons
		createNeurons(new Random().nextInt(100));
		
		
		
		
		return input;
	}
	
	private void createNeurons(int n) {
		for (int i = 0; i < n; i++) {
			SigmoidNeuron a = new SigmoidNeuron(n);
			neurons.add(a);
		}
	}
}
